<!DOCTYPE html>
<html lang="en" ng-app="app">
<% include ./partials/head %>

<body ng-cloak>
    <% include ./partials/nav %>
    <main role="main" class="container" ng-controller="homeCtrl" ng-init="onInit()">
        <div class="page-area">
            <div class="row">
                <div class="col-lg-12">
                    <button type="button" class="btn btn-primary" ng-click="onShowInfo()">Show Info</button>
                    <button type="button" class="btn btn-danger" ng-click="onShowError()">Show Error</button>
                    <button type="button" class="btn btn-success" ng-click="onShowSuccess()">Show Success</button>
                    <button type="button" class="btn btn-warning" ng-click="onShowWarning()">Show Warning</button>
                </div>
            </div>
        </div>
    </main>
    <% include ./partials/footer %>
    <% include ./partials/scripts %>
    <script src="/scripts/angular/controllers/home-controller.js"></script>
</body>
</html>